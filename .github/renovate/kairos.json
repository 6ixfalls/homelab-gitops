{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchDatasources": ["docker"],
            "versioning": "regex:^bookworm-standard-amd64-generic-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\-k3sv([^-]+)-k3s(?<build>\\d+)-?(?<revision>\\d+)?$"
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["(^|/)bootstrap/.+\\.sh$"],
            "matchStrings": [
                "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sIMAGE=(.*?):(?<currentValue>.*)"
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
        }
    ]
}
